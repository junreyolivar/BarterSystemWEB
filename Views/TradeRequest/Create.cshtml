@{
    ViewData["Title"] = "Send Trade Request";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="fas fa-handshake me-2"></i>Send Trade Request</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label for="receiverId" class="form-label fw-bold">Select User to Trade With</label>
                            <select name="receiverId" class="form-control" required>
                                <option value="">-- Select User --</option>
                                @foreach (var user in ViewBag.Users)
                                {
                                    <option value="@user.Id">@user.Username (@user.DisplayName)</option>
                                }
                            </select>
                        </div>

                        <div class="mb-3">
                            <label for="offeredItemId" class="form-label fw-bold">Select Your Item</label>
                            <select name="offeredItemId" class="form-control" required>
                                <option value="">-- Select Item --</option>
                                @foreach (var item in ViewBag.MyItems)
                                {
                                    <option value="@item.Id">@item.Name</option>
                                }
                            </select>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-paper-plane me-2"></i>Send Request
                            </button>
                            <a asp-action="Search" class="btn btn-secondary btn-lg ms-2">
                                <i class="fas fa-arrow-left me-2"></i>Back to Search
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>