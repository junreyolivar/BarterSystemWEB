@{
    ViewData["Title"] = "Home - BarterPro";
    var userId = Context.Session.GetInt32("UserId");
    var userDisplayName = ViewBag.UserDisplayName as string ?? "Trader";
    var recentItems = ViewBag.RecentItems as List<BarterSystem.Models.Item> ?? new List<BarterSystem.Models.Item>();
}

<!-- Hero Section -->
<section class="hero-section bg-primary text-white">
    <div class="container">
        <div class="row align-items-center min-vh-80 py-5">
            <div class="col-lg-6">
                @if (userId == null)
                {
                    <h1 class="display-4 fw-bold mb-4">Trade Smarter, <span class="text-warning">Connect Better</span></h1>
                    <p class="lead mb-4">Experience the future of bartering with our modern platform. Trade items seamlessly with verified users worldwide.</p>
                    <div class="d-flex flex-wrap gap-3">
                        <a asp-controller="User" asp-action="Register" class="btn btn-light btn-lg px-4 py-3 fw-bold">
                            <i class="fas fa-rocket me-2"></i>Start Trading Free
                        </a>
                        <a asp-controller="User" asp-action="Login" class="btn btn-outline-light btn-lg px-4 py-3">
                            <i class="fas fa-sign-in-alt me-2"></i>Sign In
                        </a>
                    </div>
                }
                else
                {
                    <h1 class="display-4 fw-bold mb-3">Welcome back, <span class="text-warning">@userDisplayName!</span></h1>
                    <p class="lead mb-4">Ready to discover amazing trading opportunities? Your next great trade is waiting.</p>
                    <div class="d-flex flex-wrap gap-3">
                        <a asp-controller="Item" asp-action="Create" class="btn btn-light btn-lg px-4 py-3 fw-bold">
                            <i class="fas fa-plus me-2"></i>Add New Item
                        </a>
                        <a asp-controller="Item" asp-action="All" class="btn btn-outline-light btn-lg px-4 py-3">
                            <i class="fas fa-compass me-2"></i>Explore Items
                        </a>
                    </div>
                }
            </div>
            <div class="col-lg-6 text-center">
                <div class="hero-graphic">
                    <img src="https://cdn-icons-png.flaticon.com/512/3063/3063812.png" alt="Trading" class="img-fluid floating" style="max-height: 400px;">
                    <div class="floating-elements">
                        <div class="floating-element element-1">
                            <i class="fas fa-gift"></i>
                        </div>
                        <div class="floating-element element-2">
                            <i class="fas fa-exchange-alt"></i>
                        </div>
                        <div class="floating-element element-3">
                            <i class="fas fa-shield-alt"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@if (userId != null)
{
    <!-- Stats Section -->
    <section class="container my-5 fade-in">
        <div class="row g-4">
            <div class="col-md-3">
                <div class="stat-card text-center p-4 border rounded shadow-sm">
                    <div class="stat-icon text-primary mb-3">
                        <i class="fas fa-box fa-3x"></i>
                    </div>
                    <h3 class="stat-number text-primary" id="itemsCount">0</h3>
                    <p class="stat-label text-muted">My Items</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card text-center p-4 border rounded shadow-sm">
                    <div class="stat-icon text-warning mb-3">
                        <i class="fas fa-handshake fa-3x"></i>
                    </div>
                    <h3 class="stat-number text-warning" id="activeTradesCount">0</h3>
                    <p class="stat-label text-muted">Active Trades</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card text-center p-4 border rounded shadow-sm">
                    <div class="stat-icon text-success mb-3">
                        <i class="fas fa-check-circle fa-3x"></i>
                    </div>
                    <h3 class="stat-number text-success" id="completedTradesCount">0</h3>
                    <p class="stat-label text-muted">Completed</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card text-center p-4 border rounded shadow-sm">
                    <div class="stat-icon text-info mb-3">
                        <i class="fas fa-inbox fa-3x"></i>
                    </div>
                    <h3 class="stat-number text-info" id="pendingRequestsCount">0</h3>
                    <p class="stat-label text-muted">Pending Requests</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Quick Actions -->
    <section class="container my-5 fade-in">
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100 text-center border-0 shadow-sm">
                    <div class="card-body p-4">
                        <div class="action-icon mb-3">
                            <i class="fas fa-plus-circle fa-3x text-primary"></i>
                        </div>
                        <h5 class="fw-bold mb-3">Add Items</h5>
                        <p class="text-muted mb-3">List your items to make them available for trading with the community.</p>
                        <a asp-controller="Item" asp-action="Create" class="btn btn-primary w-100">Add New Item</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 text-center border-0 shadow-sm">
                    <div class="card-body p-4">
                        <div class="action-icon mb-3">
                            <i class="fas fa-search fa-3x text-success"></i>
                        </div>
                        <h5 class="fw-bold mb-3">Browse Items</h5>
                        <p class="text-muted mb-3">Discover amazing items from traders around the world.</p>
                        <a asp-controller="Item" asp-action="All" class="btn btn-success w-100">Explore Now</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 text-center border-0 shadow-sm">
                    <div class="card-body p-4">
                        <div class="action-icon mb-3">
                            <i class="fas fa-handshake fa-3x text-info"></i>
                        </div>
                        <h5 class="fw-bold mb-3">Start Trading</h5>
                        <p class="text-muted mb-3">Create new trade offers and connect with other traders.</p>
                        <a asp-controller="Trade" asp-action="Create" class="btn btn-info w-100">Start Trading</a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Recent Items -->
    @if (recentItems.Any())
    {
        <section class="container my-5">
            <div class="row">
                <div class="col-12">
                    <h3 class="mb-4">Recently Added Items</h3>
                    <div class="row">
                        @foreach (var item in recentItems.Take(6))
                        {
                            <div class="col-md-4 col-lg-2 mb-3">
                                <div class="card h-100">
                                    @if (!string.IsNullOrEmpty(item.ImageUrl) && item.ImageUrl != "/images/no-image.jpg")
                                    {
                                        <img src="@item.ImageUrl" class="card-img-top" alt="@item.Name" style="height: 120px; object-fit: cover;">
                                    }
                                    else
                                    {
                                        <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 120px;">
                                            <i class="fas fa-image text-muted fa-2x"></i>
                                        </div>
                                    }
                                    <div class="card-body p-2">
                                        <h6 class="card-title mb-1">@item.Name</h6>
                                        <small class="text-muted">by @item.Owner?.DisplayName</small>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </section>
    }
}

<!-- Features Section -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="row text-center mb-5">
            <div class="col-12">
                <h2 class="fw-bold mb-3 text-primary">Why Choose BarterPro?</h2>
                <p class="text-muted lead">Experience trading like never before with our cutting-edge platform</p>
            </div>
        </div>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card feature-card h-100 border-0 shadow-sm">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon mb-4">
                            <i class="fas fa-bolt fa-3x text-warning"></i>
                        </div>
                        <h5 class="fw-bold mb-3">Lightning Fast</h5>
                        <p class="text-muted">Instant matching and real-time notifications for the best trading experience.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card feature-card h-100 border-0 shadow-sm">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon mb-4">
                            <i class="fas fa-shield-alt fa-3x text-primary"></i>
                        </div>
                        <h5 class="fw-bold mb-3">Secure & Safe</h5>
                        <p class="text-muted">Bank-level security with verified users and protected transactions.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card feature-card h-100 border-0 shadow-sm">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon mb-4">
                            <i class="fas fa-globe fa-3x text-success"></i>
                        </div>
                        <h5 class="fw-bold mb-3">Global Community</h5>
                        <p class="text-muted">Connect with traders worldwide and discover unique items.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Styles {
    <style>
        .min-vh-80 {
            min-height: 80vh;
        }

        .hero-graphic {
            position: relative;
        }

        .floating {
            animation: float 6s ease-in-out infinite;
        }

        .floating-elements {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
        }

        .floating-element {
            position: absolute;
            width: 60px;
            height: 60px;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
            backdrop-filter: blur(10px);
            animation: float 3s ease-in-out infinite;
        }

        .element-1 {
            top: 20%;
            left: 10%;
            animation-delay: 0s;
        }

        .element-2 {
            top: 60%;
            right: 15%;
            animation-delay: 1s;
        }

        .element-3 {
            bottom: 20%;
            left: 20%;
            animation-delay: 2s;
        }

        .feature-card {
            transition: all 0.3s ease;
        }

            .feature-card:hover {
                transform: translateY(-5px);
            }

        .action-icon {
            transition: transform 0.3s ease;
        }

        .card:hover .action-icon {
            transform: scale(1.1);
        }

        .stat-card {
            transition: transform 0.3s ease;
        }

            .stat-card:hover {
                transform: translateY(-2px);
            }

        @@keyframes float {
            0%, 100% {
                transform: translateY(0px);
            }

            50% {
                transform: translateY(-10px);
            }
        }

        .fade-in {
            animation: fadeIn 1s ease-in;
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
}

@section Scripts {
    <script>
        // Animated counter for stats
        function animateCounter(element, target) {
            let current = 0;
            const increment = target / 50;
            const timer = setInterval(() => {
                current += increment;
                if (current >= target) {
                    element.textContent = target;
                    clearInterval(timer);
                } else {
                    element.textContent = Math.floor(current);
                }
            }, 30);
        }

        // Initialize when page loads
        document.addEventListener('DOMContentLoaded', function() {
        @if (userId != null)
        {
            <text>
                        animateCounter(document.getElementById('itemsCount'), @ViewBag.UserItemsCount);
                        animateCounter(document.getElementById('activeTradesCount'), @ViewBag.ActiveTradesCount);
                        animateCounter(document.getElementById('completedTradesCount'), @ViewBag.CompletedTradesCount);
                        animateCounter(document.getElementById('pendingRequestsCount'), @ViewBag.PendingRequestsCount);
            </text>
        }
        });
    </script>
}