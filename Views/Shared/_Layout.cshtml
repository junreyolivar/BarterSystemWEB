@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@{
    var userId = HttpContextAccessor.HttpContext.Session.GetInt32("UserId");
    var username = HttpContextAccessor.HttpContext.Session.GetString("Username");
}

<!DOCTYPE html>
<html lang="en" data-bs-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SwapHub </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top">
        <div class="container">
            <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
                <i class="fas fa-exchange-alt me-2"></i>
                SwapHub
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Index" && ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" ? "active" : "")"
                           asp-controller="Home" asp-action="Index">
                            <i class="fas fa-home me-2"></i>Home
                        </a>
                    </li>
                    @if (userId != null)
                    {
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Index" && ViewContext.RouteData.Values["Controller"]?.ToString() == "Item" ? "active" : "")"
                               asp-controller="Item" asp-action="Index">
                                <i class="fas fa-box me-2"></i>My Items
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "All" && ViewContext.RouteData.Values["Controller"]?.ToString() == "Item" ? "active" : "")"
                               asp-controller="Item" asp-action="All">
                                <i class="fas fa-compass me-2"></i>Browse
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Create" && ViewContext.RouteData.Values["Controller"]?.ToString() == "Trade" ? "active" : "")"
                               asp-controller="Trade" asp-action="Create">
                                <i class="fas fa-handshake me-2"></i>Create Trade
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Pending" && ViewContext.RouteData.Values["Controller"]?.ToString() == "TradeRequest" ? "active" : "")"
                               asp-controller="TradeRequest" asp-action="Pending">
                                <i class="fas fa-inbox me-2"></i>Trade Requests
                                <span class="badge bg-danger badge-notification ms-1" id="pendingRequestsBadge" style="display: none;"></span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Chat" ? "active" : "")"
                               asp-controller="Chat" asp-action="Index">
                                <i class="fas fa-comments me-2"></i>Chat
                                <span class="badge bg-danger badge-notification ms-1" id="chatBadge" style="display: none;"></span>
                            </a>
                        </li>
                    }
                </ul>

                <ul class="navbar-nav">
                    @if (userId != null)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" role="button" data-bs-toggle="dropdown">
                                <div class="user-avatar me-2">
                                    <i class="fas fa-user-circle fa-lg"></i>
                                </div>
                                <div class="user-info d-none d-md-block">
                                    <div class="fw-bold small">@username</div>
                                    <div class="x-small text-light">Active</div>
                                </div>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end shadow">
                                <li>
                                    <a class="dropdown-item" asp-controller="Item" asp-action="Index">
                                        <i class="fas fa-box me-2"></i>My Items
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="TradeRequest" asp-action="Pending">
                                        <i class="fas fa-inbox me-2"></i>Trade Requests
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Trade" asp-action="TradeHistory">
                                        <i class="fas fa-history me-2"></i>Trade History
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item text-danger" asp-controller="User" asp-action="Logout">
                                        <i class="fas fa-sign-out-alt me-2"></i>Logout
                                    </a>
                                </li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a asp-controller="User" asp-action="Login" class="btn btn-outline-light me-2">
                                <i class="fas fa-sign-in-alt me-1"></i>Login
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="User" asp-action="Register" class="btn btn-primary">
                                <i class="fas fa-user-plus me-1"></i>Join Free
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="pb-5">
        <!-- Display TempData messages -->
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show m-3" role="alert">
                <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show m-3" role="alert">
                <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @if (TempData["Warning"] != null)
        {
            <div class="alert alert-warning alert-dismissible fade show m-3" role="alert">
                <i class="fas fa-exclamation-triangle me-2"></i>@TempData["Warning"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @if (TempData["Info"] != null)
        {
            <div class="alert alert-info alert-dismissible fade show m-3" role="alert">
                <i class="fas fa-info-circle me-2"></i>@TempData["Info"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="bg-dark text-light py-4 mt-5">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6 mb-4 mb-lg-0">
                    <div class="d-flex align-items-center mb-3">
                        <i class="fas fa-exchange-alt fa-2x me-3 text-primary"></i>
                        <div>
                            <h4 class="fw-bold mb-0">SwapHub </h4>
                            <p class="text-light mb-0">Modern Trading Platform</p>
                        </div>
                    </div>
                    <p class="text-light mb-0">Trade items seamlessly with our modern bartering platform. Connect with traders worldwide.</p>
                </div>
                <div class="col-lg-6 text-lg-end">
                    <div class="social-links mb-3">
                        <a href="#" class="me-3 text-light">
                            <i class="fab fa-twitter fa-lg"></i>
                        </a>
                        <a href="#" class="me-3 text-light">
                            <i class="fab fa-facebook fa-lg"></i>
                        </a>
                        <a href="#" class="me-3 text-light">
                            <i class="fab fa-instagram fa-lg"></i>
                        </a>
                        <a href="#" class="text-light">
                            <i class="fab fa-linkedin fa-lg"></i>
                        </a>
                    </div>
                    <p class="text-light mb-0">&copy; 2024 SwapHub . All rights reserved.</p>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @if (userId != null)
    {
        <script>
            // Update pending requests badge
            function updatePendingBadge() {
                fetch('/TradeRequest/GetPendingCount')
                    .then(response => response.json())
                    .then(data => {
                        const badge = document.getElementById('pendingRequestsBadge');
                        if (data.count > 0) {
                            badge.textContent = data.count;
                            badge.style.display = 'inline';
                        } else {
                            badge.style.display = 'none';
                        }
                    })
                    .catch(error => console.error('Error fetching pending count:', error));
            }

            // Update badge on page load and periodically
            document.addEventListener('DOMContentLoaded', function() {
                updatePendingBadge();
                setInterval(updatePendingBadge, 30000); // Update every 30 seconds
            });
        </script>
    }

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>