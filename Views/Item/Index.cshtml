@model List<BarterSystem.Models.Item>

@{
    ViewData["Title"] = "My Items";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-box me-2"></i>My Items</h2>
        <div>
            <a asp-action="All" class="btn btn-outline-primary me-2">
                <i class="fas fa-compass me-1"></i>Browse All
            </a>
            <a asp-action="Create" class="btn btn-success">
                <i class="fas fa-plus me-1"></i>Add New Item
            </a>
        </div>
    </div>

    <!-- Items Count -->
    <div class="alert alert-light mb-4">
        <strong>@ViewBag.TotalItems items total</strong> |
        <strong class="text-success">@ViewBag.ImageCount with images</strong> |
        <small class="text-muted">Upload path: @ViewBag.UploadPath</small>
    </div>

    <!-- Items List -->
    @if (Model.Any())
    {
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <!-- Item Image -->
                        @if (!string.IsNullOrEmpty(item.ImageUrl) && item.ImageUrl != "/images/no-image.jpg")
                        {
                            <img src="@item.ImageUrl" class="card-img-top" alt="@item.Name"
                                 style="height: 200px; object-fit: cover;"
                                 onerror="this.src='/images/no-image.jpg'">
                        }
                        else
                        {
                            <div class="card-img-top bg-light d-flex align-items-center justify-content-center"
                                 style="height: 200px;">
                                <span class="text-muted">
                                    <i class="fas fa-image fa-2x"></i><br>
                                    No Image
                                </span>
                            </div>
                        }

                        <div class="card-body">
                            <h5 class="card-title">@item.Name</h5>
                            <p class="card-text text-muted">
                                @(item.Description?.Length > 100 ? item.Description.Substring(0, 100) + "..." : item.Description ?? "No description")
                            </p>
                            <small class="text-muted">
                                <i class="fas fa-calendar me-1"></i>@item.CreatedAt.ToString("MMM dd, yyyy")
                            </small>
                        </div>

                        <div class="card-footer bg-transparent">
                            <div class="d-flex justify-content-between align-items-center">
                                <small class="text-muted">
                                    @if (!string.IsNullOrEmpty(item.ImageUrl) && item.ImageUrl != "/images/no-image.jpg")
                                    {
                                        <span class="text-success"><i class="fas fa-check-circle me-1"></i>Has Image</span>
                                    }
                                    else
                                    {
                                        <span class="text-warning"><i class="fas fa-times-circle me-1"></i>No Image</span>
                                    }
                                </small>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-eye me-1"></i>View
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5 bg-light rounded">
            <h4 class="text-muted mb-3"><i class="fas fa-inbox fa-2x mb-3"></i></h4>
            <h4 class="text-muted">No items yet</h4>
            <p class="text-muted mb-4">Start by adding your first item to begin trading!</p>
            <a asp-action="Create" class="btn btn-primary btn-lg">
                <i class="fas fa-plus me-2"></i>Add Your First Item
            </a>
        </div>
    }
</div>